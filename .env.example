# OpenAI API
OPENAI_API_KEY=sk-...
# Model selection (e.g. gpt-4o, o1-mini, etc.)
LLM_MODEL=o1-mini

# OVH Object Storage (S3 Compatible)
OVH_ENDPOINT_URL=https://s3.rbx.io.cloud.ovh.net/
OVH_ACCESS_KEY=...
OVH_SECRET_KEY=...
OVH_REGION_NAME=rbx

# Bucket Names (Separate for Isolation)
# Default fallback if specific env var is missing
DATA_LAKE_BUCKET=splendid-bethe
# Environment specific overrides
DATA_LAKE_BUCKET_DEV=splendid-bethe-dev
DATA_LAKE_BUCKET_PRD=splendid-bethe-prd

# Script Execution Timeout (seconds)
# How long LLM-generated scripts can run before being killed
# Default: 300 (5 minutes)
SCRIPT_EXECUTION_TIMEOUT=300

# S3 Pre-Signed URL Expiration (seconds)
# How long generated S3 URLs remain valid
# Should be >= SCRIPT_EXECUTION_TIMEOUT + buffer (e.g., 300s)
# Default: 3600 (1 hour)
PRESIGNED_URL_EXPIRATION=3600

# Sample Data Size (characters)
# How much data to extract for LLM analysis in transformation scripts
# Larger samples provide more context but increase LLM costs
# Default: 5000 characters
SAMPLE_DATA_SIZE=5000

# Dry-Run Mode
# Set to true to validate scripts without executing them
# Useful for testing pipeline configurations safely
# Default: false
DRY_RUN=false

# Structured Logging
# Set to true to enable JSON structured logging
# Useful for log aggregation and monitoring tools
# Default: false
STRUCTURED_LOGGING=false
